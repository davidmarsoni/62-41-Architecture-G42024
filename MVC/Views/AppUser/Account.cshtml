@model AppUserHistroyViewModel
@{
    ViewData["Title"] = "Account of users";
}

<h1>Account information of users</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="GetAccountInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label">User</label>
                <div class="input-group">
                    <select asp-for="AccountId" class="form-select" asp-items="ViewBag.AccountsSelect"></select>
                    <button type="submit" class="btn btn-primary btn-block" id="moveGroup">Show Transaction</button>
                </div>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
        </form>
    </div>
    <!-- list of the transaction of the user -->
    <!-- diplay the balance-->
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Balance" class="control-label">Current Balance</label>
            <div class="input-group mb-3">
                <input asp-for="Balance" class="form-control" type="number" readonly />
                <div class="input-group-append">
                    <span class="input-group-text">CHF</span>
                </div>
            </div>
        </div>
    </div>
    
    @Html.Partial("_ListOfTransactionHistories", Model.TransactionHistories)

</div>

