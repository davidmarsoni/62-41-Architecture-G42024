@model DTO.TransactionHistoryDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TransactionHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label">AccountUsername    </label>
                <select asp-for="AccountId" class="form-select" asp-items="ViewBag.AccountsSelect"></select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Src" class="control-label">Source</label>
                <select asp-for="Src" class="form-select" asp-items="ViewBag.SrcSelect"></select>
                <span asp-validation-for="Src" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="TransactionType" class="control-label">Type of the Transaction</label>
                <select asp-for="TransactionType" class="form-select" asp-items="ViewBag.TransactionTypeSelect"></select>
                <span asp-validation-for="TransactionType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Amount" class="control-label"></label>
                <div class="input-group mb-3">
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                    <div class="input-group-append">
                        <span class="input-group-text">CHF</span>
                    </div>
                </div>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ConversionId" class="control-label">Conversion</label>
                <select asp-for="ConversionId" class="form-select" asp-items="ViewBag.ConversionsSelect"></select>
                <span asp-validation-for="ConversionId" class="text-danger"></span>
            </div>
            <!-- hidden input to transmit conversionList (IEnumerable) -->
            @if (ViewBag.AccountsAvailable && ViewBag.ConversionsAvailable)
            {
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>
