@model DTO.ConversionDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Conversion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConversionId" />
            <div class="form-group">
                <label asp-for="ConversionName" class="control-label">Name</label>
                <input asp-for="ConversionName" class="form-control" />
                <span asp-validation-for="ConversionName" class="text-danger"></span>
            </div>
           
            <div class="form-group mt-3">
                <label asp-for="ConversionValue" class="control-label">Value</label>
                <div class="input-group mb-3">
                    <input type="number" min="0" asp-for="ConversionValue" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text">CHF</span>
                    </div>
                </div>
                <span asp-validation-for="ConversionValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

